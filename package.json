{
  "name": "vue-component",
  "description": "A UI Library for Modern Web Apps, powered by Vue",
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.2",
  "author": "woyehenni",
  "homepage": "https://github.com/woyehenni/vue-component#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woyehenni/vue-component.git"
  },
  "bugs": "https://github.com/woyehenni/vue-component/issues",
  "keywords": [
    "vue3",
    "component",
    "vite"
  ],
  "type": "module",
  "license": "MIT",
  "module": "./dist/index.es.js",
  "style": "./dist/index.css",
  "sideEffects": [
    "**/*.css"
  ],
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "package.json"
  ],
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,vue}": [
      "eslint . --fix"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix \"src/**/*.{css,scss}\""
    ]
  },
  "scripts": {
    "dev": "pnpm run --filter ./playground dev",
    "build": "run-p declaration \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "declaration": "vue-tsc",
    "type-check": "vue-tsc --noEmit",
    "lint:script": "eslint . --fix",
    "lint:style": "stylelint --fix \"src/**/*.{css,scss}\"",
    "lint-staged": "lint-staged",
    "format": "prettier --write src/",
    "prepare": "husky"
  },
  "dependencies": {
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.1.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^9.13.0",
    "eslint-plugin-vue": "^9.29.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "sass-embedded": "^1.80.4",
    "stylelint": "^16.10.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.2",
    "typescript": "~5.6.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.3",
    "vue-tsc": "^2.1.6"
  }
}